# === LOCAL OLLAMA SETUP (No API keys needed) ===
OLLAMA_BASE_URL=http://localhost:11434/v1
OLLAMA_MODEL=llama2
OLLAMA_API_KEY=ollama

# === TEXT-TO-SPEECH (Use local pyttsx3 - works offline) ===
# Changed from gtts to pyttsx3 because:
# - pyttsx3 works completely offline (no internet needed)
# - gTTS requires internet connection
# - pyttsx3 uses system's local voices
TTS_PROVIDER=pyttsx3
TTS_LANGUAGE=en

# === SPEECH-TO-TEXT (Optional - comment out if not using) ===
# Uncomment below if you want to enable STT with OpenAI Whisper
# OPENAI_API_KEY=sk-your-key-here

# === SERVER CONFIG ===
HOST=0.0.0.0
PORT=8000
DEBUG=True
LOG_LEVEL=INFO

# === FRONTEND ===
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# === CLINIC INFO ===
CLINIC_NAME=Local Medical Clinic
CLINIC_PHONE=555-0100
EMERGENCY_HOTLINE=911

# === SESSION CONFIG ===
SESSION_TIMEOUT=900
MAX_CONVERSATION_LENGTH=50
