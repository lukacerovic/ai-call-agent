# === LOCAL OLLAMA SETUP (No API keys needed) ===
OLLAMA_BASE_URL=http://localhost:11434/v1
OLLAMA_MODEL=llama2
OLLAMA_API_KEY=ollama

# === TEXT-TO-SPEECH (Use local pyttsx3 - works offline) ===
TTS_PROVIDER=pyttsx3
TTS_LANGUAGE=en

# === SPEECH-TO-TEXT (Google Speech Recognition - free, no API key needed) ===
# Uncomment below if you want to enable OpenAI Whisper as fallback
# OPENAI_API_KEY=sk-your-key-here

# === SERVER CONFIG ===
HOST=0.0.0.0
PORT=8000
DEBUG=True
LOG_LEVEL=DEBUG

# === FRONTEND ===
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# === CLINIC INFO ===
CLINIC_NAME=Local Medical Clinic
CLINIC_PHONE=555-0100
EMERGENCY_HOTLINE=911

# === SESSION CONFIG ===
SESSION_TIMEOUT=900
MAX_CONVERSATION_LENGTH=50

# === AUDIO CONFIG (Voice Activity Detection) ===
VAD_THRESHOLD=0.5
SILENCE_DURATION=1.5
SAMPLE_RATE=16000
CHUNK_SIZE=1024
