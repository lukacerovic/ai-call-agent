# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-key-here

# Groq API Configuration (Alternative to Ollama)
GROQ_API_KEY=gsk-your-groq-api-key-here
GROQ_MODEL=llama-3.2-70b-versatile

# Ollama Local LLM Configuration (if using Ollama instead of Groq)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Audio Configuration
SAMPLE_RATE=16000
CHUNK_SIZE=1024
VAD_THRESHOLD=0.5
SILENCE_DURATION=1.5

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True
LOG_LEVEL=INFO

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Session Configuration
SESSION_TIMEOUT=900
MAX_CONVERSATION_LENGTH=50

# TTS Configuration
TTS_PROVIDER=gtts  # Options: gtts, pyttsx3, azure
TTS_LANGUAGE=en
TTS_SLOW=False

# STT Configuration
STT_PROVIDER=whisper  # Options: whisper, google

# Clinic Information
CLINIC_NAME=Medical Clinic
CLINIC_PHONE=+1-555-0100
EMERGENCY_HOTLINE=911
