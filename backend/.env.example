# LLM Provider Configuration
# Choose ONE of the following:

# Option 1: Groq (Recommended - Free, Fast)
# Get key: https://groq.com/
GROQ_API_KEY=gsk-your-groq-api-key-here
GROQ_MODEL=llama-3.2-70b-versatile

# Option 2: OpenAI (Costs money)
# Get key: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# Option 3: Ollama (Local, Free) - RECOMMENDED FOR TESTING
# Install: https://ollama.com/
# Run: ollama serve (then pull model: ollama pull llama2)
OLLAMA_BASE_URL=http://localhost:11434/v1
OLLAMA_MODEL=llama2
OLLAMA_API_KEY=ollama

# Speech-to-Text Provider
# Only OpenAI Whisper is supported for STT
# This requires OPENAI_API_KEY to be set
# Alternatively, you can disable STT by setting:
DISABLE_STT=False
OPENAI_API_KEY=sk-your-openai-key-here

# Text-to-Speech Provider
TTS_PROVIDER=gtts  # Options: gtts, pyttsx3
TTS_LANGUAGE=en
TTS_SLOW=False

# Audio Configuration
SAMPLE_RATE=16000
CHUNK_SIZE=1024
VAD_THRESHOLD=0.5
SILENCE_DURATION=1.5

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True
LOG_LEVEL=INFO

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Session Configuration
SESSION_TIMEOUT=900
MAX_CONVERSATION_LENGTH=50

# Clinic Information
CLINIC_NAME=Medical Clinic
CLINIC_PHONE=+1-555-0100
EMERGENCY_HOTLINE=911
